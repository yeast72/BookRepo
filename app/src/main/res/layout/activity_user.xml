<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yeast.bookstore.ListBook.UserActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:text="Your Balance"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_alignTop="@+id/text$"
        android:layout_alignStart="@+id/balanceText"
        />

    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balanceText"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_marginStart="70dp"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/text$"
        />

    <TextView
        android:id="@+id/text$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="100dp"
        android:textColor="#000000"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        />

    <Button
        android:id="@+id/fundBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEA01F"
        android:textColor="#ffffff"
        android:text="ADD BALANCE"
        android:textSize="20dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/text$"
        android:layout_alignParentStart="true"
        android:onClick="addFund"
        />

</RelativeLayout>
