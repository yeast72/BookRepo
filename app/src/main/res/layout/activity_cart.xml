<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yeast.bookstore.ListBook.CartActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:text="Your Balance"
        android:textColor="#000000"
        android:layout_marginTop="23dp"
        android:layout_alignTop="@+id/text$"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balanceText"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:id="@+id/text$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="100dp"
        android:textColor="#000000"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR CART"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#9B9B9B"
        android:textSize="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_above="@+id/cartListView" />

    <ListView
        android:id="@+id/cartListView"
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_weight="0.91"
        android:layout_above="@+id/purchaseBtn"
        android:layout_alignParentStart="true">

    </ListView>

    <Button
        android:id="@+id/purchaseBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PURCHASE"
        android:background="#e83333"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="purchase"
        />

</RelativeLayout>
